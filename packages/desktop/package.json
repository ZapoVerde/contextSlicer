{
  "name": "@slicer/desktop",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "bin": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"tsx --watch server/index.ts\" \"vite\"",
    "build:ui": "vite build --outDir dist/public",
    "build:server": "tsc -p tsconfig.server.json",
    "package": "pnpm build:ui && pnpm build:server && pkg . --out-path release --targets node20-linux-x64,node20-win-x64"
  },
  "dependencies": {
    "@slicer/core": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "express": "^5.0.0",
    "cors": "^2.8.5",
    "chokidar": "^4.0.0",
    "istextorbinary": "^2.3.0",
    "open": "^10.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "concurrently": "^9.0.0",
    "pkg": "^5.8.1",
    "tsx": "^4.19.0",
    "vite": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.7.0"
  }
}