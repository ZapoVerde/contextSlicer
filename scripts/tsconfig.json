{
  "extends": "../tsconfig.json", // It can still inherit from the main app tsconfig
  "compilerOptions": {
    // Settings for the Node.js scripts environment
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "noEmit": true, // We don't compile scripts, we run them with ts-node
    "types": ["node"] // Specify node types for this environment
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
